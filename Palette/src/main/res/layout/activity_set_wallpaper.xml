<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_translucentwindow"
    tools:context="com.hixos.smartwp.SetWallpaperActivity">

    <view
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.hixos.smartwp.widget.CircleView"
        android:id="@+id/circleView"
        app:circleColor="@color/accent_red"
        app:circleAlpha="1.0"
        app:innerDrawable="@drawable/ic_set_wallpaper"
        app:innerDrawableFixedRadius="0.4"
        app:circleRadius="0.4"
        app:foreground="@drawable/bubble_foreground_red"
        android:clickable="true" />
</FrameLayout>
