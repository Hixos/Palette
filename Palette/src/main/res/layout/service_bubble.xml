<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <view class="com.hixos.smartwp.widget.CircleView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/circleView"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:padding="@dimen/bubble_padding"
        app:maxWidth="@dimen/bubble_max_width"
        app:maxHeight="@dimen/bubble_max_height"/>

    <view class="com.hixos.smartwp.widget.FontTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:textFont="RobotoCondensed-Regular"
        android:textAllCaps="true"
        android:textSize="@dimen/bubble_text"
        tools:text="Slideshow"
        android:layout_gravity="center"
        android:id="@+id/textview_name"/>
</LinearLayout>