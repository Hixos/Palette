<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/selector" />
            <corners android:topLeftRadius="1.0dip"
                android:topRightRadius="1.0dip"
                android:bottomLeftRadius="1.0dip"
                android:bottomRightRadius="1.0dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/selector_gray" />
        </shape>
    </item>
</selector>