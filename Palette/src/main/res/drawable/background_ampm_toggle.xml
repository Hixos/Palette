<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/picker_selector_checked" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/picker_background_checked" />
        </shape>
    </item>
    <item android:state_pressed="true" android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/picker_selector" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/picker_background" />
        </shape>
    </item>
</selector>