<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hixos.smartwp" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-feature
        android:name="android.hardware.location.network"
        android:required="true" />
    <uses-feature
        android:name="android.software.live_wallpaper"
        android:required="true" />
    <uses-feature
        android:glEsVersion="0x20000"
        android:required="true" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:name="com.hixos.smartwp.Palette"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.DarkPalette.Material.Translucent"
        android:hardwareAccelerated="true">
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDGk4WlZT8VMKTZfLW-4TWmZLiQi5WuojA" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.hixos.smartwp.MainActivity"
            android:theme="@style/Theme.DarkPalette.Material.Translucent.NoShadow"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hixos.smartwp.services.ServicesActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.hixos.smartwp.CropperActivity"
            android:label="@string/title_activity_cropper"
            android:theme="@style/Theme.DarkPalette.Material.Translucent.NoShadow">
        </activity>
        <activity
            android:name="com.hixos.smartwp.services.slideshow.IntervalPickerActivty"
            android:theme="@style/Theme.DarkPalette.Material.Dialog.NoActionBar">
        </activity>

        <service
            android:name="com.hixos.smartwp.wallpaper.LiveWallpaperService"
            android:enabled="true"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_WALLPAPER"
            android:process=":lwp" >
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" >
                </action>
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/livewallpaper" >
            </meta-data>
        </service>

        <activity
            android:name="com.hixos.smartwp.services.geofence.GeofencePickerActivity"
            android:label="@string/title_activity_geofence_picker"
            android:theme="@style/Theme.DarkPalette.Material.Translucent.Ultra">
        </activity>
        <activity
            android:name="com.hixos.smartwp.SetWallpaperActivity"
            android:label="@string/title_activity_set_wallpaper"
            android:theme="@style/Theme.DarkPalette.Material.Translucent.TranslucentWindow" >
        </activity>
        <activity
            android:name="com.hixos.smartwp.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.DarkPalette.Material.Settings">
        </activity>
        <activity
            android:name="com.hixos.smartwp.services.geofence.ProviderFixActivity"
            android:label="@string/title_activity_provider_fix"
            android:theme="@style/Theme.DarkPalette.Material.Dialog.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.hixos.smartwp.services.geofence.NotificationReceiver"
            android:exported="false" >
        </receiver>

        <activity
            android:name="com.hixos.smartwp.WallpaperSettingsActivity"
            android:theme="@android:style/Theme.NoDisplay" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hixos.smartwp.ReceiveWallpaperActivity"
            android:label="@string/title_activity_receive_wallpaper"
            android:theme="@style/Theme.DarkPalette.Material.Dialog.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>
    </application>

</manifest>
